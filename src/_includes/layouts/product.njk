{% extends "layouts/base.njk" %}

{% block content %}
<section class="py-20 px-6">
  <div class="container mx-auto max-w-4xl">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Product Image -->
      <div class="rounded-xl overflow-hidden shadow-lg">
        <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto object-cover" />
      </div>

      <!-- Product Details -->
      <div class="flex flex-col justify-center">
        <h1 class="text-4xl font-serif font-bold text-gray-900 mb-4">{{ title }}</h1>
        <p class="text-2xl text-orange-600 font-semibold mb-6">${{ price }}</p>
        
        <div class="prose prose-lg text-gray-700 mb-8">
          {{ description | safe }}
        </div>

        <button
          class="snipcart-add-item bg-orange-600 hover:bg-orange-700 text-white font-medium py-3 px-8 rounded-full transition-colors w-fit flex items-center gap-2"
          data-item-id="{{ id }}"
          data-item-price="{{ price }}"
          data-item-url="{{ page.url | url }}"
          data-item-description="{{ description }}"
          data-item-image="{{ image | url }}"
          data-item-name="{{ title }}">
          <i data-lucide="shopping-cart"></i>
          Add to Cart
        </button>
      </div>
    </div>
  </div>
</section>
{% endblock %}
